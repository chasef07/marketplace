# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (Development - SQLite)
DEV_DATABASE_URL=sqlite:///marketplace_dev.db

# Database Configuration (Production - PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/marketplace_prod
DB_USER=marketplace_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=marketplace_prod

# Database Configuration (Staging)
STAGING_DATABASE_URL=postgresql://username:password@localhost:5432/marketplace_staging

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourfrontend.com

# AI Services
OPENAI_API_KEY=your-openai-api-key-here

# Logging
LOG_LEVEL=INFO

# Session Configuration (Production)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=/path/to/uploads

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0